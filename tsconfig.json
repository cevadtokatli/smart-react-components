{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}